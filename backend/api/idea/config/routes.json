{
  "routes": [{
      "method": "GET",
      "path": "/ideas",
      "handler": "idea.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/ideas/admin/:id",
      "handler": "idea.setAdmin",
      "config": {
        "policies": ["isIdeaCreator"]
      }
    },
    {
      "method": "PUT",
      "path": "/ideas/upvote/:id",
      "handler": "idea.upvote",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/ideas/volunteer/:id",
      "handler": "idea.volunteer",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/ideas/follow/:id",
      "handler": "idea.follow",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/ideas/count",
      "handler": "idea.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/ideas/:id",
      "handler": "idea.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/ideas",
      "handler": "idea.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/ideas/:id",
      "handler": "idea.update",
      "config": {
        "policies": ["isIdeaAdminOrCreator"]
      }
    },
    {
      "method": "DELETE",
      "path": "/ideas/:id",
      "handler": "idea.delete",
      "config": {
        "policies": ["isIdeaCreator"]
      }
    }
  ]
}
